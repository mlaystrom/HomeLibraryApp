@model GenreDetail

@{
    ViewData["Title"] = Model.Genre;
}

<h1>Delete @Model.Genre from your Genre List</h1>
<hr>

<dl>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Genre)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Genre)
    </dd>
</dl>
<form asp-action="Delete" class="col d-flex vstack gap-2 col-md-2">
    <input type ="submit" value="Delete" class="btn btn-outline-danger btn-lg" />
     <a asp-action="Index">Back to Genre List</a>
</form>