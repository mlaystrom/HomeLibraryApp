@model HomeLibrary.Models.Reader.ReaderLogin

@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4 mb-3">Log in</h1>
<p>New to HomeLibrary? <a asp-action="Register" asp-controller="Account" class="text-center registerLink"> Register Here</a></p> 
<form asp-action="Login" method="post"> 
    <div class="form-floating mb-2">
        <input type="text" class="form-control" asp-for="UserName" placeholder="UserName">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
     <div class="form-floating mb-2">
        <input type="text" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column col-md-1 mx-auto">
        <button type="submit" class="btn btn-outline-primary btn-lg">Log in</button>
    </div>

</form>
