@model BookDetail

@{
    ViewData["Title"] = Model.Title;
}

<h1> @Model.Title </h1>
<h2>Details</h2>
<hr>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayNameFor(model => model.Author)
    </dd>
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.SeriesNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayNameFor(model => model.Comment)
    </dd>
  <!-- need to figure out how to include genre -->
</dl>

<div>
    <a asp-action="Index">Return to Library</a>
    <span>|</span>
    <a asp-action="Edit" asp-route-itemid="@Model.Id">Edit</a>
</div>