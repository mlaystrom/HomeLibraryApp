@model IEnumerable<WishListDetail>

@{
    ViewData["Title"] = "WishList Index";
}

<h1>BOOK WISHLIST</h1>
<hr>
<div class="col d-flex vstack gap-2 col-sm-2 " style="text-align: center">
<a asp-action="Create" class="mb-3 mt-5">Add A Book</a>
</div>
<table class = "table table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeriesNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
        </tr>
    </thead>
    <tbody>
          @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.SeriesNumber
                    </td>
                    <td>
                        @item.Genre
                    </td>
                    <td class="text-end">
                        <a asp-action="Update" asp-route-id="@item.Id">Update</a> 
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
